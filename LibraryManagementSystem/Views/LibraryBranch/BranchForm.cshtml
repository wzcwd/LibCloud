@model LibraryBranch
@{
    ViewData["Title"] = Model.LibraryBranchId == 0 ? "Add Branch" : "Edit Branch";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="BranchName" class="control-label"> Branch Name</label>
        <input asp-for="BranchName" class="form-control"/>
        <!-- Add hidden field to pass LibraryBranchId -->
        <input type="hidden" asp-for="LibraryBranchId" />
    </div>

    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure to submit ?');"
            style="margin-top: 10px">Submit
    </button>
    <a asp-action="ListAll" class="btn btn-secondary" style="margin-top: 10px">Cancel</a>
</form>

