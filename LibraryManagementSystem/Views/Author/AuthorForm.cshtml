@model Author

@{ ViewData["Title"] = Model.AuthorId == 0 ? "Add author" : "Edit author";}
<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <antiforgery />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Author Name</label>
        <input asp-for="Name" class="form-control"/>
        <input type="hidden" asp-for="AuthorId"/>
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 10px"
            onclick="return confirm('Are you sure to edit the author?');">Submit</button>
    <a asp-action="ListAll" class="btn btn-secondary" style="margin-top: 10px">Cancel</a>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}