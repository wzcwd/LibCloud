<main>
  <h1 class="visually-hidden">Sidebar</h1>
  <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <img src="~/images/library-logo.svg" alt="Library Logo" width="50" height="50" class="me-2 mt-1" />
      <span class="fs-4" style="position: relative; left: 10px;"><strong>LibCloud</strong></span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a asp-action="Index" asp-controller="Home"
           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")">
          <svg class="bi me-2" width="16" height="16">
            <use xlink:href="#home"/>
          </svg>
          Home
        </a>
      </li>
      <li>
        <a asp-action="ListAll" asp-controller="Book"
           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Book" ? "active" : "")">
          <svg class="bi me-2" width="16" height="16">
            <use xlink:href="#book"/>
          </svg>
          Book
        </a>
      </li>
      <li>
        <a asp-action="ListAll" asp-controller="Author"
           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Author" ? "active" : "")">
          <svg class="bi me-2" width="16" height="16">
            <use xlink:href="#vector-pen"/>
          </svg>
          Author
        </a>
      </li>
      <li>
        <a asp-action="ListAll" asp-controller="Customer"
           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Customer" ? "active" : "")">
          <svg class="bi me-2" width="16" height="16">
            <use xlink:href="#person-vcard"/>
          </svg>
          Customer
        </a>
      </li>
      <li>
        <a asp-action="ListAll" asp-controller="LibraryBranch"
           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Branch" ? "active" : "")">
          <svg class="bi me-2" width="16" height="16">
            <use xlink:href="#buildings"/>
          </svg>
          LibraryBranch
        </a>
      </li>
    </ul>
    <hr>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1"
             data-bs-toggle="dropdown" aria-expanded="false">
            @if (User.IsInRole("Admin"))
            {
              <i class="bi bi-person-fill-gear me-2 fs-2" alt="User Avatar"></i>
            }
            else
            {
              <i class="bi bi-person-fill-check me-2 fs-2" alt="User Avatar" ></i>
            }
            <strong>@User.Identity.Name</strong>
          </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>
              <li>
                <form asp-action="Logout" asp-controller="Account" method="post" class="dropdown-item p-0 m-0">
                  <antiforgery/>
                  <button type="submit" class="btn text-white w-100 text-start">Logout</button>
                </form>
              </li>
            </ul>
        </div>
    }
    else
    {
        <div class="dropdown">
          <a class="d-flex align-items-center text-white text-decoration-none" asp-action="Login" asp-controller="Account">
            <i class="bi bi-person-fill-x me-2 fs-2" alt="Login Icon"></i>
            <strong>Login</strong>
          </a>
        </div>
    }
  </div>


  <!-- Page Content -->
  <div class="flex-grow-1 p-4 page-content">
    @RenderBody() @* it will be replaced by page content *@
