// monitor the current height to avoid layout issue
  window.addEventListener('resize', adjustMainHeight);
  function adjustMainHeight() {
    const mainElement = document.querySelector('main');
    const viewportHeight = window.innerHeight; // get current height 
    // adjust current height based on current height
    mainElement.style.height = `${viewportHeight}px`; 
  }
  adjustMainHeight();

  
</script>

