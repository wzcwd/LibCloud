@model LibraryManagementSystem.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url('@Url.Content("~/images/background.webp")') no-repeat center center fixed;
        background-size: cover;
    }

    .form-signin {
        background: rgba(255, 255, 255, 0.85);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
        max-width: 500px;
        margin: 170px auto;
    }
</style>

<div class="form-signin">
    <form asp-action="Login" method="post">
        <antiforgery />
        <div asp-validation-summary="All" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Please Log in</h1>

        <div class="form-floating mb-1">
            <input asp-for="Username" class="form-control" placeholder="username"/>
            <label asp-for="Username" class="control-label">Username</label>
        </div>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="password"/>
            <label asp-for="Password" class="control-label">password</label>
        </div>

        <div class="checkbox mb-3">
            <input asp-for="RememberMe" class="form-check-input"/>
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Login</button>

        <p class="mt-3 text-center">Don't have an account?
            <a asp-action="Register" asp-controller="Account">Register here</a>
        </p>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}