@model Customer

@{ ViewData["Title"] = Model.CustomerId == 0 ? "Add customer" : "Edit customer";}
<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"> Customer Name</label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"> Email</label>
        <input asp-for="Email" class="form-control"/>
    </div>
    
    <input type="hidden" asp-for="CustomerId"/>

    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure to submit ?');"
            style="margin-top: 10px">
        Submit
    </button>
    <a asp-action="ListAll" class="btn btn-secondary" style="margin-top: 10px">Cancel</a>
</form>